<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <link rel="stylesheet" href="../stylesheets/aboutme.css">
    <title>Document</title>
</head>
<body>
    <div id="main">
        <div id="left">
            <div id="head">
                <i class="ri-twitter-line"></i> Twitter
            </div>
            <div id="anchor">
                <div class="test">
                    <i class="ri-home-2-line"></i> <a class="a" href="/profile">Home</a><br>
                </div>
                <div class="test">
                <i class="ri-hashtag"></i><a class="a" href="/alluser">Explore</a><br>
            
                </div>
                <div class="test">
                <i class="ri-question-answer-line"></i><a class="a" href="">My tweets</a><br>
                </div>
                <div class="test">
                <i class="ri-chat-3-line"></i>  <a class="a" href="">Message</a><br>
                </div>
                <div class="test">
                <i class="ri-book-mark-line"></i><a class="a" href="">bookmarks</a><br>
                </div>
                <div class="test">
                <i class="ri-logout-box-line"></i> <a class="a" href="/logout">Logout</a><br>
            
                </div>
                
            </div>
           
            
        </div>
        <div id="centre">
            <div id="container">
                <form action="/uploadprofile" method="post" enctype="multipart/form-data" style="display: none">
                    <input type="file" name="profilepic" id="profilepic">
                    <input type="submit" value="Upload">
                </form>
                <div id="profile-img">
                    <img src="../images/uploads/<%=user.profilepic%>" alt="">
                   
                </div>
                <div id="profile-name">
                    <h1>Name :<%=user.name%></h1>
                </div>
                <div id="profile-username">
                    <h3>Username :<%=user.username%></h3>
                </div>
            </div>
            <div id="allpost">
                <%if(user.tweets.length>0){%>
                    <%user.tweets.forEach(function(elem){%>
                    <%if(elem.imgurl===undefined){%>
                        <div id="postonly">
                            <h5>Username:<%=user.username%></h5>
                            <p>Caption: <%=elem.caption%></p>
                            <p>Created at :<%=elem.createdat%></p>
                            <div id="operations2">
                                <a href="/like/<%=elem._id%>"><i class="ri-heart-line"></i><%=elem.likes.length%></a>
                                <a href="/delete/<%=elem._id%>"><i class="ri-delete-bin-line"></i></a>
                                <a href="/savepost/<%=elem._id%>"><i class="ri-chat-download-line"></i> </a>                        
                            </div>        
                            </div>
                            
                    
                    
                    <%}else{%>
                        <div  id="post">
                            <div id="imgcard">
                                <img src="./images/Uploads/<%=elem.imgurl%>" alt="">
                            </div>
                            <div id="caption">
                                <h5>Username: <%=user.username%></h5>
                                <p>caption : <%=elem.caption%></p>
                                <p>created at :<%=elem.createdat%></p>
                            </div>
                            <div id="operations">
                                <a href="/like/<%=elem._id%>"><i class="ri-heart-line"></i><%=elem.likes.length%></a>
                                <a href="/delete/<%=elem._id%>"><i class="ri-delete-bin-line"></i></a>
                                <a href="/savepost/<%=elem._id%>" download="../images/Uploads/<%=elem.imgurl%>"><i class="ri-chat-download-line"></i> </a>
                            
                            </div>
                        </div>
                        <br>
                        <br>
                    
                    <%}%>
                        <%})%>
                    
                    
                    <%}else{%>
                    <h1>No posts here</h1>
                    <%}%>
                    
    
    
            </div>
          

        </div>
        <div id="right"></div>
    </div>
</body>
<script>
var a=document.querySelector("#profile-img");
var form=document.querySelector("form");

var flag=0

a.addEventListener("click",function(){
    if (flag===0) {
    form.style.display="block"
    flag=1
} else {
    form.style.display="none"
    flag=0
}



})



</script>
</html>