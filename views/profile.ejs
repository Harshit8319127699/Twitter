<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <div id="main">
<div id="left">
<div id="head">
    <i class="ri-twitter-line"></i> Twitter
</div>
<div id="anchor">
    <div class="test">
        <i class="ri-home-2-line"></i> <a class="a" href="">Home</a><br>
    </div>
    <div class="test">
    <i class="ri-hashtag"></i><a class="a" href="">Explore</a><br>

    </div>
    <div class="test">
    <i class="ri-question-answer-line"></i><a class="a" href="">My tweets</a><br>
    </div>
    <div class="test">
    <i class="ri-chat-3-line"></i>  <a class="a" href="">Message</a><br>
    </div>
    <div class="test">
    <i class="ri-book-mark-line"></i><a class="a" href="">bookmarks</a><br>
    </div>
    <div class="test">
    <i class="ri-logout-box-line"></i> <a class="a" href="/logout">Logout</a><br>

    </div>
    
</div>
<div id="btn">
    <button id="button">Tweet</button>
</div>

</div>
<div id="centre">
<div id="form">
<form action="/createtweet" method="post" enctype="multipart/form-data">
<input type="text" name="caption" placeholder="caption">
<br>
<input type="file"  name="imgurl">
<br>
<button value="submit">Submit</button>

</form>

</div>

<%if(allposts.length>0){%>
<%allposts.forEach(function(elem){%>
<%if(elem.imgurl===undefined){%>
    <div id="postonly">
        <h5>Username:<%=elem.username.name%></h5>
        <p>Caption: <%=elem.caption%></p>        
        </div>


<%}else{%>
    <div  id="post">
        <div id="imgcard">
            <img src="./images/Uploads/<%=elem.imgurl%>" alt="">
        </div>
        <div id="caption">
            <h5>Username: <%=elem.username.name%></h5>
            <p>caption : <%=elem.caption%></p>
        </div>
    </div>
    <br>
    <br>

<%}%>
    <%})%>


<%}else{%>
<h1>No posts here</h1>
<%}%>
    

</div>
<div id="right">



</div>



            </div>



    </form>
</body>
<script>
var btn=document.querySelector("#button")
var form=document.querySelector("#form")
var flag=0
btn.addEventListener('click',function(){
    if(flag===0){
        form.style.display="block"
        flag=1
    }
    else{
        form.style.display="none"
        flag=0

    }
})


</script>


</html>
